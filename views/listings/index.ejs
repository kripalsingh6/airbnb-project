    <% for(let listing of allListing){ %>
    <div class="card" style="width: 18rem;">
  <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
  
  <div class="card-body">
    <p class="card-text">
        <%= listing.description  %>
    </p>
  </div>
  </div>
  <%}  %>
    
    <ul>
    <% for(let listing of allListing){ %>
        <li><a href="/listings/<%= listing._id  %>"><%= listing.title %></a></li>
    <%}  %>
</ul>
</body>

